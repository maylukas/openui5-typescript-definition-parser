{
  "compilerOptions": {
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist"
  },
  "filesGlob": [
    "./typings/**/*.d.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "dist",
    "output"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false,
    "formatOnSave": true
  }
}
